/* ========================= */
/* == Ajax cart overrides == */
/* ========================= */
#theme-ajax-cart.is-drawer {
    width: 50%;
    right: -50%;
    background-color: #ECEAE5;
    min-width: 375px;
    overflow: hidden;
}

#theme-ajax-cart {
    .ajax-cart.ajax-cart--drawer {
        height: 100%;

        #ajax-cart__content {
            height: 100%;
            display: flex;
            flex-direction: column;
        }
    }

    .ajax-cart__cart-title {
        padding: 20px 20px 24px 20px;

        font-size: clamp(2rem, 1.714rem + 0.6vw, 2.25rem);
        line-height: clamp(2.375rem, 2.018rem + 0.74vw, 2.688rem);

        text-align: left;
        color: #333;
        font-family: "Instrument Serif", serif !important;
        font-weight: 400;
        letter-spacing: 0;

        border-bottom: none;
    }

    .ajax-cart__close-icon {
        top: 20px;
        right: 20px;
        transform: none;

        .icon {
            width: 1rem;
            height: 1rem;
        }
    }

    .ajax-cart__product-content {
        display: flex;
        gap: clamp(0.75rem, 0.464rem + 0.6vw, 1rem);
        justify-content: space-between;
        align-items: center;
    }

    .ajax-cart__price.price {
        margin-top: clamp(0.75rem, -1.107rem + 3.87vw, 2.375rem);

        color: #65645F;
        font-family: "Instrument Serif", serif;
        font-size: clamp(1.25rem, 0.964rem + 0.6vw, 1.5rem);
        line-height: clamp(1.375rem, 1.089rem + 0.6vw, 1.625rem);
    }

    .ajax-cart__product-title {
        a {
            color: #333;
            font-family: "Instrument Serif", serif;
            font-size: clamp(1.5rem, 0.929rem + 1.19vw, 2rem);
            font-weight: 400;
            line-height: clamp(1.625rem, 0.768rem + 1.79vw, 2.375rem);
            margin-bottom: 12px;

            &:visited,
            &:hover {
                color: #333;
            }
        }
    }

    .ajax-cart__selling-plan-name {
        display: none;
    }

    .cart__price {
        width: auto;

        p {
            color: #333;
            font-family: "Instrument Serif", serif;
            font-size: clamp(1.25rem, 0.679rem + 1.19vw, 1.75rem);
            line-height: clamp(1.375rem, 0.732rem + 1.34vw, 1.938rem);
            display: flex;
            justify-content: end;
            align-items: center;
            gap: 10px;

            .sale {
                color: inherit;
            }

            .compare-at-price {
                color: #A2A199;
            }
        }
    }

    .ajax-cart__right-content {
        display: block;
        margin: 0;
    }

    .ajax-cart__delete {
        display: block;
        padding: 12px;
        border-radius: 10px;
        background-color: rgba(236, 234, 229, 1);

        &:hover {
            background-color: rgba(236, 234, 229, 0.9);
        }

        .close {
            height: auto;
            width: auto;
            max-width: none;
            max-height: none;
            display: flex;
            background: none;
        }

        .icon {
            height: 24px;
            width: 24px;
            max-height: unset;
            max-width: unset;
            min-height: auto;
            min-width: auto;
        }
    }

    .ajax-cart__quantity-box {
        max-width: unset;
        margin-top: 0;
    }

    .quantity-wrapper {
        display: flex;
        align-items: center;
        background-color: #ECEAE5;
        border-radius: 10px;
        padding: 5px 0;
    }

    .quantity-minus,
    .quantity-plus {
        width: 24px;
        border-radius: 10px;
        background-color: transparent;
        padding: 0;

        .icon {
            fill: #65645F;
            width: 24px;
            height: 24px;
            padding: 0;
        }
    }

    .quantity-input {
        padding: 0;
        width: 60px;
        background-color: #ECEAE5;
        border: none;
        color: #000;
        text-align: center;
        font-family: "Instrument Serif", serif;
        font-size: 24px;
        font-weight: 400;
        line-height: 26px;
    }

    .ajax-cart__quantity-controls-wrapper {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-top: clamp(0.75rem, -2.464rem + 6.7vw, 3.563rem);
    }

    .ajax-cart__form {
        max-height: 100vh;
        overflow: auto;

        display: flex;
        gap: 20px;
        flex-direction: column;
        justify-content: space-between;
        flex: 1;
    }

    .ajax-cart__list {
        padding: 0 20px;
    }

    .ajax-cart__product {
        align-items: stretch;
        border-top: none;
        padding: 12px;
        margin-bottom: 8px;
        border-radius: 12px;
        background: #E3E1D8;

        &:last-child {
            margin-bottom: 0;
        }
    }

    .ajax-cart__product-image {
        img {
            border-radius: 10px;
            border: 1px solid #FFF;
            height: 100%;
        }
    }

    .ajax-cart__details-wrapper {
        padding: 0;
        border: none;
        display: flex;
        flex-direction: column;
        gap: 20px;

        .ajax-cart__subtotal {
            padding: 0;
            .ajax-cart__row-description,
            .money {
                color: #333;
                font-family: "Instrument Serif", serif;
                font-size: clamp(1.75rem, 1.464rem + 0.6vw, 2rem);
                font-weight: 400;
                line-height: clamp(1.938rem, 1.438rem + 1.04vw, 2.375rem);
            }
        }
    }

    .ajax-cart__details-wrapper-subtotal {
        border: 1px solid #CDCABD;
        padding: 20px 20px 40px 20px;
    }

    .ajax-cart__taxes-shipping-message {
        margin-top: 8px;
        color: #65645F;
        font-family: Inter, sans-serif;
        line-height: 24px;

        a {
            color: #65645F;
        }
    }

    .ajax-cart__button-wrapper {
        .ajax-cart__button {
            margin-top: clamp(1rem, -0.143rem + 2.38vw, 2rem);
            padding: 13px;
            border-radius: 10px;
            background-color: #1F5C8A;
            transition: background-color .3s linear;
            color: #FFF;
            font-family: "Instrument Serif", serif;
            font-size: 24px;
            font-weight: 400;
            line-height: 1;
            text-transform: none;
            min-height: auto;
            height: auto;

            &:hover {
                background-color: rgb(31 92 138 / 90%);
            }

            &:focus {
                background-color: rgb(31 92 138 / 80%);
            }
        }
    }

    .ajax-cart__cart-link {
        margin-top: 21px;
        margin-bottom: 0;
        display: inline-block;
        color: #333;
        font-family: "Instrument Serif", serif;
        font-size: 24px;
        font-weight: 400;
        line-height: 1;
        text-decoration: none;
        transition: opacity .3s linear;

        &:hover {
            opacity: 0.9;
        }

        &:focus {
            opacity: 0.8;
        }
    }

    @media screen and (max-width: 1024px) {
        .ajax-cart__product-content {
            flex-wrap: wrap;
        }

        .cart__price {
            p {
                justify-content: unset;
            }
        }
    }

    .ajax-cart__empty-cart-message {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        flex: 1;

        .ajax-cart__empty-text {
            padding: clamp(0.75rem, 0.179rem + 1.19vw, 1.25rem);
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;

            margin: 0;
            color: #333;
            font-family: "Instrument Serif", serif;
            font-size: 36px;
            font-weight: 400;
            line-height: 1.2;
        }

        .continue-shopping-wrapper {
            padding: clamp(1.563rem, 0.991rem + 1.19vw, 2.063rem) clamp(0.75rem, 0.179rem + 1.19vw, 1.25rem) clamp(1.313rem, 0.741rem + 1.19vw, 1.813rem);
            border: 1px solid #CDCABD;
            a {
                color: rgba(51, 51, 51, 1);
                font-family: "Instrument Serif", serif;
                font-size: 24px;
                line-height: 1;

                &:hover {
                    color: rgba(51, 51, 51, 0.9);
                }

                &:focus {
                    color: rgba(51, 51, 51, 0.8);
                }
            }
        }
    }

    /* ========================= */
    /* == Subscribe and save == */
    /* ========================= */
    .subscribe-custom {
        display: flex;
        align-items: center;
        cursor: pointer;
        margin-top: 13px;

        .subscribe-custom__checkbox {
            width: 16px;
            height: 16px;
            margin: 0 8px 0 0;
        }

        .subscribe-custom__header {
            color: #333;
            font-family: Inter, sans-serif;
            font-size: 14px;
            font-weight: 500;
            line-height: 1;
            letter-spacing: 0;
        }
    }
}

@media only screen and (max-width: 798px) {
    #theme-ajax-cart.is-drawer {
        right: -60%;
        width: 60%;

        .ajax-cart__product-image {
            width: 33.333%;
        }
    }
}

@media only screen and (max-width: 480px) {
    #theme-ajax-cart.is-drawer {
        right: -100%;
        width: 100%;

        .ajax-cart__button-wrapper {
            .ajax-cart__button {
                font-size: 24px !important;
            }
        }
    }
}

/* ========================= */
/* == Ajax form alert == */
/* ========================= */
.ajax-cart-form-alert {
    overflow: hidden;
    position: absolute;
    right: -100%;
    bottom: 20px;
    min-width: 350px;
    padding: 1rem;
    border-radius: 10px;
    background: #E3E1D8;
    max-width: 350px;
    margin-left: auto;
    transition: right .3s ease-out;
    z-index: 1;
    box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.1);
}

.ajax-cart-form-alert.has-info {
    right: 20px;
}

.ajax-cart-form-alert__header {
    display: flex;
    align-items: center;
    gap: 8px;
    justify-content: space-between;
    margin-bottom: 4px;
}

.ajax-cart-form-alert__header-info {
    display: flex;
    align-items: center;
    gap: 8px;
}

.ajax-cart-form-alert__title {
    color: #A50C0F;
    font-family: "Instrument Serif", serif;
    font-size: 28px;
    line-height: 1.1;
}

.ajax-cart-form-alert__message {
    color: #65645F;
    font-family: Inter, sans-serif;
    font-size: 16px;
    line-height: 1.5;
}

.ajax-cart-form-alert__header-close {
    width: 16px;
    height: 16px;
}

/* ========================= */
/* == Loader == */
/* ========================= */
@keyframes rotation {
    0% {
        transform: translate(-50%, -50%) rotate(0deg);
    }
    100% {
        transform: translate(-50%, -50%) rotate(360deg);
    }
}

.loader {
    position: absolute;
    left: 50%;
    top: 50%;
    z-index: 1;
    transform: translate(-50%, -50%) rotate(0deg);

    width: 48px;
    height: 48px;
    border: 5px solid #1F5C8A;
    border-bottom-color: transparent;
    border-radius: 50%;
    display: none;
    pointer-events: none;
    box-sizing: border-box;
    animation: rotation 1s linear infinite;
}

.ajax-cart.ajax-cart--drawer.disabled {
    opacity: 0.5;
    pointer-events: none;

    .loader {
        display: inline-block;
        pointer-events: auto;
    }
}