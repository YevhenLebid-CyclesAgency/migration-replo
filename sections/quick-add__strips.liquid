<style>
  .section--{{ section.id }} {
    padding-top: 60px;
    padding-bottom: 60px;
  }

  #product_select .flex {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
  }

  #product_select h2 {
    font-family: Rubik, sans-serif;
    font-size: 30px;
    line-height: 38px;
    letter-spacing: 0;
    font-weight: 700;
    color: #20425E;
    text-align: center;
    margin-bottom: 40px;
  }

  #product_select .list_packs {
    align-items: stretch;
    column-gap: 24px;
    margin-bottom: 40px;
    flex-wrap: nowrap;
  }

  #product_select .list_packs .pack {
    width: calc((100% - 48px) / 3);
    border-radius: 16px;
    padding: 24px;
    background: #fff;
    box-shadow: 0px 13px 49px 0px rgba(133, 160, 191, 0.18);
    overflow: hidden;
    cursor: pointer;
    transition: all 0.3s ease;
    color: #20425e;
    border: 2px solid transparent;
  }

  #product_select .list_packs .pack.active {
    border: 2px solid #3f90d1;
    background: #f1f7fc;
  }

  #product_select .pack > div:first-of-type {
    justify-content: flex-start;
    align-items: center;
    flex-wrap: nowrap;
    margin-bottom: 16px;
  }

  #product_select .pack .size {
    font-size: 14px;
    font-weight: 700;
    margin-right: 16px;
  }

  #product_select .pack .best,
  #product_select .pack .top,
  #product_select .pack .save {
    display: block;
    margin-right: 6px;
    padding: 6px 8px;
    font-size: 14px;
    line-height: 1;
    color: white;
    border-radius: 5px;
    text-transform: uppercase;
  }

  #product_select .pack .best {
    background-color: #20425e;
  }

  #product_select .pack .top {
    background-color: #2975b3;
  }

  #product_select .pack .save {
    background-color: #f2742a;
  }

  #product_select .pack .main_info {
    position: relative;
  }

  #product_select .pack .name {
    font-size: 24px;
    line-height: 1.3;
    font-weight: 600;
    margin-bottom: 8px;
  }

  #product_select .pack .by_week {
    font-weight: 700;
    margin-bottom: 8px;
  }

  #product_select .pack .summ {
    font-size: 18px;
    line-height: 26px;
  }

  #product_select .pack .summ .old {
    color: #5e778b;
    text-decoration: line-through;
  }

  #product_select .pack .logo_pack {
    position: absolute;
    top: 0;
    right: 0;
    width: 52px;
    color: #f2742a;
    text-align: center;
  }

  #product_select .subscription {
    align-items: start;
    margin: 0 auto 16px;
    border-radius: 16px;
    border: 1px solid #f5f6f7;
    background: #fef7e8;
    padding: 14px;
    column-gap: 10px;
    max-width: 356px;
    flex-wrap: nowrap;
    position: relative;
    cursor: pointer;
  }

  #product_select .subscription input {
    width: 0.1px;
    height: 0.1px;
    opacity: 0;
    position: absolute;
  }

  #product_select .subscription > p {
    font-size: 14px;
  }

  #product_select .subscription > p b {
    font-size: 16px;
    font-weight: 700;
  }

  #product_select .subscription > p b span {
    color: #f0752d;
  }

  #product_select .subscription input + span {
    display: flex;
    height: 24px;
    width: 24px;
    background-color: #fff;
    border-radius: 3px;
    border: 1px solid #20425e;
    flex-shrink: 0;
  }

  #product_select .subscription input:checked + span:after {
    content: '';
    width: 24px;
    height: 24px;
    background: url(//somnifix.com/cdn/shop/files/check.svg?v=5210968464230111766) center center no-repeat;
    background-size: contain;
    display: block;
    margin: auto;
  }

  #product_select .total {
    width: fit-content;
    margin: 0 auto 16px;
    font-family: Rubik, sans-serif;
    font-size: 24px;
    font-weight: 700;
  }

  #product_select .total_old {
    font-weight: 400;
    text-decoration: line-through;
    color: #5e778b;
  }

  #product_select .btn_main {
    margin: 0 auto;
    width: 100%;
    max-width: 385px;
    display: flex;
    padding: 12px 40px;
    justify-content: center;
    align-items: center;
    border-radius: 100px;
    background: #20425e;
    border: none;
    font-size: 16px;
    font-weight: 700;
    line-height: 24px;
    text-transform: none;
    cursor: pointer;
    color: #fff;
  }

  @media (max-width: 768px) {

    .section--{{ section.id }} {
      padding-top: 40px;
    }

    #product_select h2 {
      text-align: left;
      font-size: 24px;
      line-height: 32px;
      font-weight: 500;
      margin-bottom: 20px;
    }

    #product_select .list_packs {
      flex-direction: column;
      row-gap: 12px;
      margin-bottom: 20px;
    }

    #product_select .list_packs .pack {
      width: 100%;
      position: relative;
      padding: 16px;
    }

    #product_select .pack > div:first-of-type {
      position: absolute;
      flex-direction: column;
      row-gap: 6px;
      right: 0;
      align-items: flex-end;
    }

    #product_select .pack .main_info {
      padding-left: 64px;
    }

    #product_select .pack .best,
    #product_select .pack .top,
    #product_select .pack .save {
      margin-right: 16px;
      font-size: 12px;
      padding: 4px 6px;
    }

    #product_select .pack .logo_pack {
      right: auto;
      left: 0;
      top: 50%;
      transform: translateY(-50%);
    }

    #product_select .pack .size {
      order: 3;
      font-size: 12px;
    }

    #product_select .pack .name {
      font-size: 20px;
      margin-bottom: 6px;
    }

    #product_select .pack .by_week {
      line-height: 19px;
      margin-bottom: 6px;
    }

    #product_select .pack .summ {
      font-size: 16px;
      line-height: 24px;
    }

    #product_select .pack:last-of-type > div:first-of-type {
      top: 50%;
      transform: translateY(-50%);
    }

    #product_select .subscription {
      padding: 12px;
    }

    #product_select .subscription > p {
      font-size: 12px;
      line-height: 17px;
    }
  }
</style>

