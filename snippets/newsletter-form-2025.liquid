{% comment %}
Optional values
newsletter_class: <string>
{% endcomment %}

{% comment %} Assign object as block or section {% endcomment %}
{%- liquid
  if type == 'block'
    assign object = block
  else
    assign object = section
  endif

  if settings.form_button_style contains 'primary'
    assign field_input_size = settings.button_primary_padding
    assign field_input_style = 'primary-btn-style'
  elsif settings.form_button_style contains 'secondary'
    assign field_input_size = settings.button_secondary_padding
    assign field_input_style = 'secondary-btn-style'
  else
    assign field_input_size = settings.button_link_padding
  endif

  if id == nil
    assign form_id = 'contact_form'
  else
    assign form_id = id | append: '_contact_form'
  endif
  assign form_action = '/contact#' | append: form_id
-%}

<style>
  .newsletter-form-2025__wrapper {
    input[type="email"] {
      height: auto;
      padding: 15px 16px;
      color: rgba(255, 255, 255, 0.80);
      font-family: Inter, sans-serif;
      font-size: 16px;
      line-height: 24px;
      border: none;
      border-radius: 10px;
      background-color: #1B5078;

      &::placeholder {
        color: rgba(255, 255, 255, 0.80);
      }
    }

    .field {
      margin-bottom: 0;

      .control {
        width: calc(100% - 8px);
      }
    }

    .is-align-self-middle {
      align-self: center;
    }

    button[type="submit"] {
      border-radius: 10px;
      background-color: #FFF;
      padding: 13px 28px;

      color: #1F5C8A;
      font-family: "Instrument Serif", serif;
      font-size: 24px !important;
      line-height: 24px;
      text-transform: none;

      transition: background-color .3s linear;

      &:hover {
        background-color: #ffffffe6;
      }

      &:focus {
        background-color: #fffc;
      }
    }

    .newsletter-form .field.is-default-width {
      min-width: auto;
    }
  }

  /* ========================= */
  /* == Success Message == */
  /* ========================= */
  .newsletter-form-2025-success {
    max-width: 360px;
    position: fixed;
    bottom: 55px;
    right: 32px;
    border-radius: 10px;
    background: #ECEAE5;
    padding: 16px;
    box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.1);
    opacity: 0;
    pointer-events: none;
    transition: opacity .3s linear;
  }

  .newsletter-form-2025-success.active {
    z-index: 1;
    opacity: 1;
    pointer-events: auto;
  }

  .newsletter-form-2025-success__header {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 4px;

    color: #333;
    font-family: "Instrument Serif", serif;
    font-size: 28px;
    line-height: 31px;
  }

  .newsletter-form-2025-success__content {
    color: #65645F;
    font-family: Inter, sans-serif;
    font-size: 16px;
    line-height: 24px;
  }

  .newsletter-form-2025-success__close {
    position: absolute;
    right: 8px;
    top: 8px;
  }
</style>

{% style %}

  #shopify-section-{{ object.id }} .newsletter-form__wrapper {
    {% if width == 'half' %}
      max-width: 100%;
    {% endif %}
  }

  {% render 'css-loop',
          css: custom_css,
          id: object.id
  %}
{% endstyle %}

